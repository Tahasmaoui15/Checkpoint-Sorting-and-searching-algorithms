PROCEDURE Insertion(arr)
VAR
    i,j,currentElement : INTEGER
BEGIN
    FOR i from 0 to i < length.arr DO
        currentElement:= arr[i];
        j:=i-1;
        WHILE (j>=0 AND arr[j]>currentElement) DO
            arr[j+1]:=arr[j];
            j:=j-1;
        END_WHILE
        arr[j+1]=currentElement;
    END_FOR    

END